{% extends 'base.html.twig' %}

{% block title %}Auteur{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-md-12">
            <!-- Advanced Tables -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h1>Auteur</h1>
                </div>
                <div class="panel-body">
                    <div class="table-responsive">

                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ auteur.id }}</td>
                            </tr>
                            <tr>
                                <th>Prenom</th>
                                <td>{{ auteur.prenom }}</td>
                            </tr>
                            <tr>
                                <th>Nom</th>
                                <td>{{ auteur.nom }}</td>
                            </tr>
                            </tbody>
                        </table>

                        <a href="{{ path('auteur_index') }}">
                            <button class="btn btn-primary"style="margin-bottom: 2px">
                                <i class="fa fa-backward"></i>back to list
                            </button>
                        </a>

                        <a href="{{ path('auteur_edit', {'id': auteur.id}) }}">
                            <button class="btn btn-warning">
                                <i class="fa fa-edit"></i>
                            </button>
                        </a>

                        {{ include('auteur/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
