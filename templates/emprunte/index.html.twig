{% extends 'front_base.html.twig' %}

{% block title %}Hello EmprunteController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Mes empruntes </h1>
    <div class="row">
        <div class="col-md-12">
            <!-- Advanced Tables -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h1>Livres</h1>

                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                            <tr>
                                <th>Titre</th>
                                <th>Date de l'emprunte</th>
                                <th>Date du retour</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for emprunte in empruntes %}
                                <tr>
                                    <td>{{ emprunte.livre.titre }}</td>
                                    <td>{{ emprunte.debut|date }}</td>
                                    <td>{{ emprunte.fin|date }}</td>
                                    <td>
                                        <a href="{{ path('emprunte_edit',{'id':emprunte.livre.id}) }}">
                                            <button class="btn btn-warning"><i class="fa fa-pencil"></i></button>
                                        </a>
                                        <a href="{{ path('emprunte_delete',{'id':emprunte.livre.id}) }}">
                                            <button class="btn btn-danger"><i class="fa fa-trash-o"></i></button>
                                        </a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="6">no records found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>

                        <a href="{{ path('front_office') }}">
                            <button class="btn btn-success">
                                Create new
                            </button>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
{% endblock %}
