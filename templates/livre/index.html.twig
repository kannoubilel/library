{% extends 'base.html.twig' %}

{% block title %}Livre index{% endblock %}

{% block body %}

<div class="row">
    <div class="col-md-12">
        <!-- Advanced Tables -->
        <div class="panel panel-default">
            <div class="panel-heading">
                <h1>Livres</h1>

            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Titre</th>
                            <th>NbPages</th>
                            <th>DateEdition</th>
                            <th>NbExemplaire</th>
                            <th>Prix</th>
                            <th>Isbn</th>
                            <th>actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for livre in livres %}
                            <tr>
                                <td>{{ livre.id }}</td>
                                <td>{{ livre.titre }}</td>
                                <td>{{ livre.nbPages }}</td>
                                <td>{{ livre.dateEdition ? livre.dateEdition|date('Y-m-d') : '' }}</td>
                                <td>{{ livre.nbExemplaire }}</td>
                                <td>{{ livre.prix }}</td>
                                <td>{{ livre.isbn }}</td>
                                <td>
                                    <a href="{{ path('livre_show', {'id': livre.id}) }}">
                                    <button class="btn btn-default">
                                        <i class="fa fa-eye"></i>
                                    </button>
                                    </a>
                                    <a href="{{ path('livre_edit', {'id': livre.id}) }}">
                                    <button class="btn btn-warning">
                                        <i class="fa fa-edit"></i>
                                    </button>
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="8">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    <a href="{{ path('livre_new') }}">
                       <button class="btn btn-success">Create new</button>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>


{% endblock %}
