{% extends 'base.html.twig' %}

{% block title %}Editeur index{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <!-- Advanced Tables -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h1>Editeurs</h1>

                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>NomEditeur</th>
                                <th>Pays</th>
                                <th>Adresse</th>
                                <th>Telephone</th>
                                <th>actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for editeur in editeurs %}
                                <tr>
                                    <td>{{ editeur.id }}</td>
                                    <td>{{ editeur.nomEditeur }}</td>
                                    <td>{{ editeur.pays }}</td>
                                    <td>{{ editeur.adresse }}</td>
                                    <td>{{ editeur.telephone }}</td>
                                    <td>
                                        <a href="{{ path('editeur_show', {'id': editeur.id}) }}">
                                            <button class="btn btn-default"><i class="fa fa-eye"></i></button>
                                        </a>
                                        <a href="{{ path('editeur_edit', {'id': editeur.id}) }}">
                                            <button class="btn btn-warning"><i class="fa fa-edit"></i></button>
                                        </a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="6">no records found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>

                        <a href="{{ path('editeur_new') }}">
                            <button class="btn btn-success">
                                Create new
                            </button>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
