{% extends 'base.html.twig' %}

{% block title %}Editeur{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-md-12">
            <!-- Advanced Tables -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h1>Editeur</h1>
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ editeur.id }}</td>
                            </tr>
                            <tr>
                                <th>NomEditeur</th>
                                <td>{{ editeur.nomEditeur }}</td>
                            </tr>
                            <tr>
                                <th>Pays</th>
                                <td>{{ editeur.pays }}</td>
                            </tr>
                            <tr>
                                <th>Adresse</th>
                                <td>{{ editeur.adresse }}</td>
                            </tr>
                            <tr>
                                <th>Telephone</th>
                                <td>{{ editeur.telephone }}</td>
                            </tr>
                            </tbody>
                        </table>

                        <a href="{{ path('editeur_index') }}">
                            <button class="btn btn-primary">
                                <i class="fa fa-backward"></i> back to list
                            </button>
                        </a>

                        <a href="{{ path('editeur_edit', {'id': editeur.id}) }}">
                            <button class="btn btn-warning"><i class="fa fa-edit"></i></button>
                        </a>

                        {{ include('editeur/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
